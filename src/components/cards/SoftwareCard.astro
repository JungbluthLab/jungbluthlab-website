---
interface Props {
  title: string;
  description: string;
  url: string;
}

const { title, description, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="block rounded-lg border border-gray-200 p-5 hover:shadow-md hover:border-sean-300 transition-all group"
>
  <h3 class="font-heading font-semibold text-gray-900 group-hover:text-sean-700 transition-colors">
    {title}
  </h3>
  <p class="mt-2 text-sm text-gray-600">{description}</p>
  <span class="mt-3 inline-block text-xs font-medium text-sean-600 group-hover:text-sean-700">
    View on GitHub &rarr;
  </span>
</a>
